mixin Fscreen()
    .o-fscreen
        .o-fscreen__logo
           img(src="/img/logo.svg")


        .o-fscreen__picture
            picture
                source(srcset="/img/fscreen.webp" media="(min-width: 768px)")
                img(
                    src="/img/fscreen-mob.webp"
                    alt="Mobile Preview"
                    id="videoPreview"
                )

        // Десктопное видео
        .o-fscreen__video.isHiddenTab.isHiddenMob
            video(
                id="video-ds"
                autoplay muted playsinline loop preload="auto"
            )
                source(src="/files/video/fscreen_h264.mp4" type="video/mp4")

        // Мобильное видео
        .o-fscreen__video.isHiddenDesc
            video(
                id="video-mb"
                autoplay muted playsinline loop preload="auto"
            )
                source(src="/files/video/fscreen-mob_h264.mp4" type="video/mp4")

